
#notif
    position relative
    top 20px
    left 20px
    margin-bottom 20px
    & > div
        min-width 250px
        width 300px
        padding 0
        color #fff
    i
        color #fff
    .column
        &:nth-of-type(1)
            background-color rgba(20, 30, 48, 0.3)
            vertical-align middle
            padding 20px 12px

.wish-notif
    text-align justify
    width 300px
    min-width 250px
    border 1px solid lightgrey
    position relative
    left 10px
    span
        position relative
        left 0
        right 0
        margin 0 auto
        display block
        color #ff3860
    a
        text-decoration none!important
        &:hover
            opacity 0.7